<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Daftar Belanjaan</h1>
        <a href="/new" class="new-button">Tambah data</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span style="margin-left: 15px">No</span>
          <span class="id-column">ID</span>
          <span>Item</span>
        </div>
        <ul class="table-body">
          <% let no = 1 %>
          <% items.forEach((item) => { %>
            <li>
              <div class="item-data">
                <span style="margin-left: 20px;"><%= no++ %></span>
                <span style="margin-left: 8px" class="id-column"><%= item.id %></span>
                <span class="name-column"><%= item.name %></span>
              </div>
              <div class="item-menu">
                <a href="/edit/<%= item.id %>">Edit</a>
                <form action="/delete/<%= item.id %>" method="post">
                  <input type="submit" value="Hapus">
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>